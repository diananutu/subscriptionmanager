% layout 'public/default';
% title 'Forgot password';

%=form_for '/send_recover_mail', method => 'post' => begin
    <label class="control-label">Email:</label>
    <div class="controls">
        <%= text_field 'email', class => 'span4', placeholder => "Email" %>
        </br>
        <button class="btn btn-info" type="submit"  name="recover">Recover password</button>
    </div>
%end

